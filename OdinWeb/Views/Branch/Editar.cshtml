@model OdinWeb.Models.Obj.Branch
@{
    ViewData["Title"] = "Editar Sucursal";
}
<div class="col-md-12">
    <div class="tile">
        <h3 class="tile-title">Editar Sucursal</h3>
        <div class="tile-body">
            <form asp-action="Actualizar" asp-controller="Branch" method="post">
                <input type="hidden" asp-for="id">
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" class="form-control" type="text" placeholder="Ingrese el nombre">
                    <span asp-validation-for="name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="direction" class="control-label"></label>
                    <input asp-for="direction" class="form-control" rows="4" placeholder="Ingrese la direccion"></input>
                    <span asp-validation-for="direction"></span>
                </div>
                <div class="form-group">
                    <label asp-for="active" class="control-label"></label>
                    @foreach (var opcion in (List<SelectListItem>)ViewData["Estados"])
                    {
                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="active" class="form-check-input" type="radio" name="active" value="@opcion.Value"> @opcion.Text
                            </label>
                        </div>
                    }
                    <span asp-validation-for="active"></span>
                </div>
                <div class="tile-footer">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Modificar</button>&nbsp;&nbsp;&nbsp;<a class="btn btn-secondary" asp-action="Home" asp-controller="Branch"><i class="fa fa-fw fa-lg fa-times-circle"></i>Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

