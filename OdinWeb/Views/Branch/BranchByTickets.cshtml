@model IEnumerable<OdinWeb.Models.Obj.Branch>

@{
    ViewData["Title"] = "BranchByTickets";
}

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 10px;
        padding: 10px;
        width: 300px;
        background-color: #fff;
    }

    .card-header {
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        padding: 10px 0;
    }
</style>
<h1>BranchByTickets</h1>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card" onclick="redirectToAction('@Url.Action("GetTicketsByBranch", "Ticket", new { idbranch = item.id, nombre = item.name})')">
            <div class="card-header">
                @Html.DisplayFor(modelItem => item.name)
            </div>
        </div>
    }
</div>
<script>
    function redirectToAction(url) {
        window.location.href = url;
    }</script>


