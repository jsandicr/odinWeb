@model OdinWeb.Models.Obj.UserRegister

@{
    ViewData["Title"] = "Registro";
    Layout = "_AuthLayout";
}

<section class="material-half-bg">
    <div class="cover"></div>
</section>
<section class="login-content">
    <div class="logo">
        <h1>Radiadores Odín C.R</h1>
    </div>
    <div class="create-box">
        <form class="login-form" asp-action="Register" asp-controller="Auth" method="post">
            <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Crear Cuenta</h3>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" type="text" placeholder="Nombre" autofocus>
                <span asp-validation-for="name"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName" class="form-control" type="text" placeholder="Apellido" autofocus>
                <span asp-validation-for="lastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="mail" class="control-label"></label>
                <input asp-for="mail" class="form-control" type="text" placeholder="ejemplo@gmail.com">
                <span asp-validation-for="mail"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone" class="control-label"></label>
                <input asp-for="phone" class="form-control" type="text" placeholder="8888-8888">
                <span asp-validation-for="phone"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" type="password" placeholder="******">
                <span asp-validation-for="password"></span>
            </div>
            <div class="form-group btn-container">
                <button type="submit" class="btn btn-primary btn-block" href=""><i class="fa fa-sign-in fa-lg fa-fw"></i>Registrarse</button>
            </div>
            <div class="form-group mt-3">
                <p class="semibold-text mb-0"><a href="@Url.Action("Login","Auth")"><i class="fa fa-angle-left fa-fw"></i>Regresar a inicio de sesion</a></p>
            </div>
        </form>
    </div>
</section>
@if (!string.IsNullOrEmpty(TempData["AlertMessage"] as string))
{
    <script>
        Swal.fire({
            icon: '@TempData["AlertType"]',
            title: '@TempData["AlertMessage"]',
            showConfirmButton: false,
            timer: 4000 // Duración de la alerta en milisegundos (2 segundos en este ejemplo)
        });
    </script>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}