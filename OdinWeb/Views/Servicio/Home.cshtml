@model IEnumerable<OdinWeb.Models.Obj.Service>
@{
    ViewData["Title"] = "Servicio";
}
<div class="app-title">
    <div>
        <h1><i class="fa fa-th-list"></i> Administración de Servicios</h1>
        <p>Servicios Ofrecidos</p>
        <br>
        <a asp-action="Crear" asp-controller="Servicio" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Crear</a>
    </div>
    <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home"><i class="fa fa-home fa-lg"></i></a></li>
        <li class="breadcrumb-item active"><a asp-action="Home" asp-controller="Servicio">Servicios</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered" id="tservicios">
                        <thead>
                            <tr>                            
                                <th>@Html.DisplayNameFor(model => model.name)</th>
                                <th>@Html.DisplayNameFor(model => model.description)</th>
                                <th>@Html.DisplayNameFor(model => model.active)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model != null){
                                foreach(var service in Model){
                                    <tr>
                                        <td>@Html.DisplayFor(model => service.name)</td>
                                        <td>@Html.DisplayFor(model => service.description)</td>
                                        @if (service.active == true){
                                            <td><span asp-for="active" class="badge badge-pill badge-success">Activo</span></td>
                                        }
                                        else{
                                            <td><span asp-for="active" class="badge badge-pill badge-danger">Inactivo</span></td>
                                        }
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-dark" asp-action="Ver" asp-controller="Servicio" asp-route-id="@service.id"><i class="fa fa-lg fa-eye"></i></a>
                                                <a class="btn btn-dark" asp-action="Editar" asp-controller="Servicio" asp-route-id="@service.id"><i class="fa fa-lg fa-edit"></i></a>
                                                @if (service.active == true)
                                                {
                                                    <button class="btn btn-dark cambiar-estado-btn" data-id="@service.id"><i class="fa fa-lg fa-trash"></i></button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/plugins/jquery.datatables.min.js"></script>
    <script src="~/js/plugins/datatables.bootstrap.min.js"></script>
    <script type="text/javascript">$('#tservicios').DataTable();</script>
    <script>
        $(document).ready(function () {
            $('.cambiar-estado-btn').click(function (e) {
                e.preventDefault();

                var id = $(this).data('id');

                // Mostrar confirmación con SweetAlert2
                Swal.fire({
                    title: 'Confirmación',
                    text: '¿Estás seguro de que deseas desahabilitar el servicio?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Sí',
                    cancelButtonText: 'No'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Realizar la llamada AJAX si se confirma la acción
                        $.ajax({
                            url: '@Url.Action("Eliminar", "Servicio")',
                            type: 'POST',
                            data: { id: id },
                            success: function (response) {
                                // Mostrar mensaje de éxito con SweetAlert2
                                Swal.fire('Éxito', 'Se ha eliminado correctamente.', 'success').then(function () {
                                    // Recargar la página
                                    location.reload();
                                });
                            },
                            error: function (xhr, status, error) {
                                // Mostrar mensaje de error con SweetAlert2
                                Swal.fire('Error', 'Error al eliminar.', 'error');
                                console.error('Error:', error);
                            }
                        });
                    }
                });
            });
        });

    </script>
}
