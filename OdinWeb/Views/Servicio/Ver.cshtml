@model OdinWeb.Models.Obj.Service
@{
    ViewData["Title"] = "Ver Servicio";
}
<div class="col-md-12">
    <div class="tile">
        <h3 class="tile-title">Ver Servicio</h3>
        <div class="tile-body">
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" type="text" readonly>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea asp-for="description" class="form-control" rows="4" readonly></textarea>
            </div>
            <div class="form-group">
                <label asp-for="active" class="control-label"></label>
                @foreach (var opcion in (List<SelectListItem>)ViewData["Estados"])
                {
                    <div class="form-check">
                        <label class="form-check-label">
                            <input asp-for="active" class="form-check-input" type="radio" name="active" value="@opcion.Value" readonly> @opcion.Text
                        </label>
                    </div>
                }
                <span asp-validation-for="active"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Imagen de servicio</label>
                <img src="~/images/services/@Model.photo" alt="Imagen del servicio" width="200">
            </div>
            <div class="form-group">
                <label class="control-label">Tickets creados</label>
                <input class="form-control" type="text" value="10" readonly>
            </div>
        </div>
        <div class="tile-footer">
            <a class="btn btn-secondary" asp-action="Home" asp-controller="Servicio" onclick="history.back();"><i class="fa fa-fw fa-lg fa-arrow-left"></i>Volver</a>
        </div>
    </div>
</div>

